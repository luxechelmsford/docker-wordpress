# Roots of the synchronization
root = /var/backups/${WEBDRIVE_REMOTE_PATH}
root = /mnt/webdrive/${WEBDRIVE_REMOTE_PATH}

# Log actions
log = true

# Sync settings
fastcheck = true
auto = true
batch = true
times = true
owner = true
group = true
prefer = newer

# Ignore 
ignore = Name temp.*
ignore = Name .*
ignore = Name *.tmp
ignore = Path lost+found

# Daemonize 
repeat = 30